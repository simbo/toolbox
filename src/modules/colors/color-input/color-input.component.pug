.color-input

  .color-input__display
    .color-input__color(
      [ngStyle] = "{'background-color': colorValue.hex}"
    )

  .color-input__controls

    .color-input__input
      c-textfield(
        [(ngModel)] = "input",
        placeholder = "Paste a Hex or RGB valueâ€¦"
      )

    .color-input__hex {{ colorValue.hex | lowercase }}

    .color-input__rgb {{ colorValue.color.string() }}

    .color-input__btn-random
      c-button(
        (click) = "setRandomColor()",
        icon = "dices",
        style = "icon",
        title = "Random Color"
      )

