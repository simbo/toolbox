.page--color-namer

  .page-section
    button(
      (click) = "setRandomColor()"
    ) Random Color

  .page-section
    div(
      [ngStyle] = "{'background-color': colorValue.hex, height: '4em'}"
    )

    c-textfield(
      [(ngModel)] = "input",
      placeholder = "Paste a Hex or RGB valueâ€¦"
    )

  .page-section {{ colorValue.hex | lowercase }}

  .page-section {{ colorValue.color.string() }}

  .page-section
    c-select(
      [(ngModel)] = "colorMetric",
      [choices] = "colorMetricChoices",
      label = "Closest Colors by Metric:"
    )

  .page-section

    .closest-colors
      c-named-color(
        *ngFor = "let color of (closestColors | async).slice(0, 25)",
        [color] = "color",
        [compareColor] = "colorValue",
        [compareMetric] = "colorMetric"
      )

  .page-section
    p https://en.wikipedia.org/wiki/Color_difference
