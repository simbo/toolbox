.page--color-namer

  .page-section
    button(
      (click) = "setRandomColor()"
    ) Random Color

  .page-section
    div(
      [ngStyle] = "{'background-color': colorValue.hex, height: '4em'}"
    )

    c-textfield(
      [(ngModel)] = "input"
    )

  .page-section {{ colorValue.hex }}

  .page-section {{ colorValue.rgb }}

  .page-section
    c-select(
      [(ngModel)] = "colorMetric",
      [choices] = "colorMetricChoices",
      label = "Closest Colors by Metric:"
    )

  .page-section

    .closest-colors

      .closest-color(
        *ngFor = "let color of (closestColors | async).slice(0, 25)"
      )

        .closest-color__display
          .closest-color__compare-color(
              [ngStyle] = "{'background-color': colorValue.hex}"
            )
          .closest-color__color(
              [ngStyle] = "{'background-color': color.value.hex}"
            )

        .closest-color__details

          .closest-color__name {{ color.name }}

          .closest-color__camel-case {{ color.name | kebabCase }}

          .closest-color__hex {{ color.value.hex | lowercase }}

          .closest-color__distance Î” {{ getColorDistance(color) | number:'1.5-5' }}

  .page-section
    p https://en.wikipedia.org/wiki/Color_difference
